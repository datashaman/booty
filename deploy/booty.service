[Unit]
Description=Booty - GitHub issue to PR agent
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=www-data
Group=www-data
WorkingDirectory=${INSTALL_DIR}
EnvironmentFile=-/etc/booty/secrets.env
EnvironmentFile=/etc/booty/release.env
EnvironmentFile=${INSTALL_DIR}/.env
ExecStart=${INSTALL_DIR}/.venv/bin/uvicorn booty.main:app --uds ${INSTALL_DIR}/booty.sock
Restart=always
KillSignal=SIGQUIT
RestartSec=5

[Install]
WantedBy=multi-user.target
